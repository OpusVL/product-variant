<?xml version="1.0" encoding="UTF-8"?>
<openerp>
<data>

    <record id="product_variant_easy_edit_view" model="ir.ui.view">
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product_variant_available_in_pos.product_variant_easy_edit_view"/>
        <field name="arch" type="xml">
            <field name="available_in_pos" position="after">
                 <field name="uom_category_weight" invisible="1"/>
                <field name="to_weight" attrs="{'invisible': ['|', ('available_in_pos', '=', False), ('uom_category_weight', '!=', True)]}"/>
            </field>
        </field>
    </record>

     <record id="product_template_form_view_inherit" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="point_of_sale.product_template_form_view"/>
        <field name="arch" type="xml">
            <field name="available_in_pos" position="after">
                <field name="uom_category_weight" invisible="1"/>
            </field>
            <field name="to_weight" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('available_in_pos', '=', False), ('uom_category_weight', '!=', True)]}</attribute>
            </field>
        </field>
    </record>

</data>
</openerp>